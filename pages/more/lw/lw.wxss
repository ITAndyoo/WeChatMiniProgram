/* pages/more/lw/lw.wxss */
page{height: 100vh;}
.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.btnview{
  display: flex;
  align-items: center;
  background-color: rgba(150, 150, 150, 0.3);
  color: white;
  border-radius: 50rpx;
  padding: 15px;
  box-shadow: 1px 1px 1px 1px rgba(130, 130, 130, 0.5);
  text-align: center;
  font-size: 40rpx;
  position: fixed;
  bottom: 15%;
  z-index: 999;
}

.btn{
  width: 60rpx;
}

.rbtnview{
  display: flex;
  align-items: center;
  background-color: rgba(150, 150, 150, 0.3);
  border-radius: 50rpx;
  padding: 10px;
  box-shadow: 1px 1px 1px 1px rgba(130, 130, 130, 0.5);
  text-align: center;
  position: absolute;
  left: 30rpx;
  top:4%;
  z-index: 999;
}

.img{
  width: 25rpx;
}

.btnhover{
  background-color: rgba(150, 150, 150, 0.5);
  box-shadow: 0px 0px 1px 1px rgba(120, 120, 120, 0.5);
}