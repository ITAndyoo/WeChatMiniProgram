<view class="container">
  <view class="section" >
    <view class="imgview">
      <image class = "img" mode = "widthFix" wx:if="{{src}}" src="{{src}}" /> 
    </view>
    <view class="footer">识别结果由百度AI开放平台提供</view>
  </view>
  <view class="floattip1" bindtap="selectitem1">识别有误?</view>
  <view class="floattip2" bindtap="selectitem2">更多物话</view>
  <view class="floattip3" bindtap="selectitem3">点我留言</view>
  <!-- <view class="tip" style="display:{{hidden1}}">识别结果</view>
  <view class="item-list" style="display:{{hidden1}}" id = "{{item.keyword}}" wx:for="{{items}}" bindtap="tap">
    {{item.keyword}}  
  </view> -->
  <view class="section card" style="bottom:-{{offset}}px">
    <view class="tip" style="display:{{hidden2}}">TA说<text style="font-size:9px;color:rgb(115,115,115);">（违规信息将会被删除，并计入黑名单）</text></view>
    <!-- <view class="item-list" style="display:{{hidden2}}" id = "{{item.id}}" wx:for="{{comment}}"> -->
    <view class="item-list" style="display:{{hidden2}}" wx:for="{{comment}}">
      <view class='list-item-userinfo'>
          <image class="avatar" wx:if="{{item.avatar}}" width="43px;" src="{{item.avatar}}" />
          <view class="list-item-username">
            <text>{{item.user}}</text>
          </view>
          <view class="list-item-time">
            <text>{{item.time}}</text>
          </view>
          <view class="list-item-like">
            <text>{{item.isvalid}}</text>
            <image src="{{item.islike?like_icon:unlike_icon}}" data-like="{{item.islike}}" style="margin-left:5px;width: 20px;height: 20px;vertical-align:middle;" id = "{{item.id}}" data-index = "{{index}}" bindtap="like"></image>
          </view>
        </view>
        <view class='list-item-usertext'>
          <view class="list-item-text-content" wx:if="{{item.content != 'false' }}">
            <text>{{item.content}}</text>
          </view>
        </view>
    </view>
  </view>
  <!-- <view class="item-list" style="display:{{hidden3}}" bindtap="upload">点我说些话</view> -->
  <view class="section" style="z-index:999" >
    <form bindsubmit="submit">
      <view class="footer_bar" style="bottom:{{bottom}}px">
        <input class="input" name="content" placeholder="写下友好的话..." value="{{content}}" bindinput="checkinput" adjust-position="false"/>
        <button class="auth_btn" type="primary" open-type="getUserInfo" bindgetuserinfo="GetUserInfo" style="display:{{auth_btn_dis}};width:25%;">授权</button>
        <button class="send_btn" form-type="submit" disabled="{{disabled}}" style="display:{{send_btn_dis}};width:25%;">发送</button>
      </view>
    </form>
  </view>
</view>
<modal hidden="{{hiddenModal}}" title="自定义识别结果" confirm-text="确定" cancel-text="取消" bindcancel="cancel" bindconfirm="confirm_item">  
    <input type='text' id ="user_defined_item" name="user_defined_item" placeholder="请输入所扫描的物品" value="{{user_defined_item}}" auto-focus bindinput="input"/>
</modal>
<!-- 底部输入框的替代方案 -->
<modal hidden="{{hiddenModal2}}" title="写下你想说的话" confirm-text="发送" cancel-text="取消" bindcancel="cancel2" bindconfirm="confirm_item2">  
    <textarea type='text' id ="user_dreplace_content" name="user_replace_content" placeholder="写下友好的话..." value="{{user_replace_content}}" auto-focus bindinput="input2"></textarea>
</modal>

<view class="fadeIn" wx:if="{{iosDialog1}}">
    <view class="weui-mask"></view>
    <view class="weui-dialog">
        <view class="weui-dialog__hd"><strong class="weui-dialog__title">提示信息</strong></view>
        <view class="weui-dialog__bd">您尚未登录，是否登陆</view>
        <view class="weui-dialog__ft">
            <a class="weui-dialog__btn weui-dialog__btn_default" bindtap="close">取消</a>
            <a class="weui-dialog__btn weui-dialog__btn_primary" bindtap="confirm">确定登录</a>
        </view>
    </view>
</view>