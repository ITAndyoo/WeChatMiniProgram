page{
  height:100vh;
  position: relative;
}

.floattip1{
  text-align: center;
  width: 145rpx;
  line-height: 45rpx;
  font-size: 25rpx;
  position: absolute;
  right: 0;
  top: 10%;
  background-color: rgba(235,235,235,0.5);
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}

.floattip2{
  text-align: center;
  width: 145rpx;
  line-height: 45rpx;
  font-size: 25rpx;
  position: absolute;
  right: 0;
  top: 20%;
  background-color: rgba(235,235,235,0.5);
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}


.section{
  width: 100%;
  text-align: center;
}

.imgview{
  width: 90%;
  border-radius: 30rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 0;
  padding-top: 0;
}

.img{
  width: 100%;
  margin:10px;
  border-radius: 30rpx;
}

.item-list{
  padding: 10px;
  border-bottom:1px solid;
  border-bottom-color: rgb(235,235,235);
  background-color: rgba(255, 255, 255,0.9);
  font-size: 30rpx; 
  z-index: -1;
}

.list-item-userinfo{
  height: 120rpx;
  width: 100%;
  position: relative;
}

.avatar{
height:90rpx; 
width:90rpx;
border-radius: 20%;
position: absolute;
top: 10rpx;
bottom: 10rpx;
left: 20rpx;
display: flex;
align-items: center;
justify-content: center;
}

.thavatar{
height:100rpx; 
width:100rpx;
border-radius: 5%;
margin-top:10rpx; 
margin-bottom: 10rpx;
margin-right: 20rpx;
}

.list-item-username{
  position: absolute;
  top:10rpx;
  left: 140rpx;
}

.list-item-time{
  position: absolute;
  top:65rpx;
  left: 140rpx;
  font-size: 20rpx;
}

.list-item-usertext{
  /*height: 250rpx;*/
  width: 100%;
  position: relative;
}

.list-item-text-content{
  display: block;
  text-align: left;
  padding-left: 25rpx;
  margin-bottom: 10rpx; 
  font-size: 25rpx;
  color: black;
}


.tip{
  width: 100%;
  padding-bottom: 10rpx;
  border-bottom:1px solid;
  border-bottom-color: rgb(235,235,235);
  font-size: 30rpx;

}

.input{
  width: 90%;
  height: 100%;
}

.send_btn{
  width: 40px;
  min-width: 40px;
}

.footer{
  height: 40px;
  font-size: 10px;
  color: gray;
  text-align: center;
}

.footer_bar{
  width: 100%;
  background-color: rgb(235,235,235);
  padding-left: 10px;
  position: fixed;
  bottom: 0;
  height: 40px;
  display: flex;
  z-index: 2;
}