/* pages/index/detail/detail.wxss */

.tab {
  width: 100%;
  font-size: 40rpx;
  padding: 30rpx 0 70rpx 30rpx;
}
 
.title {
  background:linear-gradient(to right,skyblue,lightblue); 

/*border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc; */
}
 
.body {
  width: 100%;
  background-color:rgb(235, 235, 235);
}

.section{
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background: white;
}

.card{
  width: 80%;
  background: white;
  padding:40rpx; 
  border-radius: 20rpx;
  box-shadow: 0px 3px 10px 0px rgb(196, 196, 196);
  position: absolute;
  top:-35rpx;
  z-index: 1;

  display: flex;
}

.avatar{
height:100rpx; 
width:100rpx;
border-radius: 20%;
left: 20rpx;
display: flex;
align-items: center;
justify-content: center;
font-size: 25rpx;
}

.thavatar{
height:200rpx; 
width:200rpx;
border-radius: 5%;
margin-top:10rpx; 
}

.card-info{
  margin-left: 30rpx; 
}

.card-username{
  font-size: 40rpx;
}

.card-time{
  padding-top: 10rpx;
  font-size: 25rpx;
}

.list-info{
  padding-top: 150rpx;
  width: 100%;
  position: relative;
}

.list-item-text-content{
  display: block;
  text-align: left;
  padding: 25rpx 0 25rpx 25rpx;
  border-bottom: 1px solid rgb(235,235,235);
  font-size: 30rpx;
  color: black;
}


.list-item-text-content-val{
  display: block;
  text-align: left;
  border-bottom: 1px solid rgb(235,235,235);
  font-size: 30rpx;
  color: black;
}

.footer {
  position: fixed;
  bottom: 0px;
  display: flex;
  width: 100%;
  font-size: 35rpx;
  border-radius: 0px;
  
}

.footer .mark {
  width: 40%;
  padding: 5rpx;
  font-weight: 600;
}

.footer .connect {
  width: 60%;
  padding: 5rpx;
  background-color:black;
  color: white;
  font-weight: 600;
  height: 80rpx;
}

.content{
  margin: 0 auto;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  height: 90rpx;
  background: #ededed;
  color: #666;
  border-radius: 10px;
  display:flex;
  justify-content:center;
  align-items:center;
  font-size:16px;
 
}
.box{
  /* width: 120rpx; */
  height: 90rpx;
  background-color: rgb(7,193,96);
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.movable-icon{
  width: 60rpx;
  height: 60rpx;
  background: url(data:image/png;base64,);
  background-size: 100% 100%;
}