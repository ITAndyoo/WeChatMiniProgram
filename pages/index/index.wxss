
.tab {
  float: left;
  width: 50%;
  text-align: center;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  font-size: 30rpx;
}
.topTabSwiper {
  zoom: 1;
  color: rgb(100, 100, 100);
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
.tabBorer {
  border-bottom: 1px solid black;
  color:black;
}
 
.swiper {
  width: 100%;
  background:rgb(235, 235, 235);
  /*background: linear-gradient(to bottom,pink,lightblue,skyblue); */
}
 
.swiper_con {
  text-align: center;
  width: 100%;
}

.swiper_footer{
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  font-size: 25rpx;
  text-align: center;
  color: rgb(100, 100, 100);
}

.list-item{
  /*height: 370rpx;*/
  border-bottom:1px solid;
  border-bottom-color: rgb(235,235,235);
  background-color: rgba(255, 255, 255,0.9);
  /*box-shadow: 4px 4px 5px 1px rgba(0, 0, 0, 0.308);*/
}

.list-item-userinfo{
  height: 120rpx;
  width: 100%;
  position: relative;
}

.avatar{
height:90rpx; 
width:90rpx;
border-radius: 20%;
position: absolute;
top: 10rpx;
bottom: 10rpx;
left: 20rpx;
display: flex;
align-items: center;
justify-content: center;
font-size: 25rpx;
}

.thavatar{
height:100rpx; 
width:100rpx;
border-radius: 5%;
margin-top:10rpx; 
margin-bottom: 10rpx;
margin-right: 20rpx;
}

.list-item-username{
  font-size: 25rpx;
  position: absolute;
  top:10rpx;
  left: 140rpx;
}

.list-item-time{
  position: absolute;
  top:70rpx;
  left: 140rpx;
  font-size: 25rpx;
}

.list-item-usertext{
  /*height: 250rpx;*/
  width: 100%;
  position: relative;
}

.list-item-text-content{
  display: block;
  text-align: left;
  padding-left: 25rpx;
  margin-bottom: 10rpx; 
  font-size: 25rpx;
  color: black;
}

.round-click1{
    height: 80rpx;
    width: 80rpx;
    background-color:rgba(255, 255, 255, 0.7);
    border-radius: 20%;
    position: fixed;
    bottom: 180rpx;
    right: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
    box-shadow:2px 2px 5px 1px rgba(0, 0, 0, 0.7);
}

.round-click2{
    height: 80rpx;
    width: 80rpx;
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 20%;
    position: fixed;
    bottom: 50rpx;
    right: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
    box-shadow:2px 2px 5px 1px rgba(0, 0, 0, 0.7);
}

.round-click1 image{
    width: 45rpx;
    height: 45rpx;
}
.round-click2 image{
    width: 45rpx;
    height: 45rpx;
}

.element {
  display: flex;
  flex-wrap: wrap;
  background: white;
}

.element view {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top:25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1px solid rgb(235,235,235);
}

.element label {
  color: black;
}

.element input{
  width: 70%;
  margin-left: 15rpx;
  padding-left: 15rpx;
}

.element picker{
  display: flex;
  float: left;
  width: 70%;
  margin-left: 15rpx;
  padding-left: 15rpx;
}

.radio-group{
  padding-top:25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1px solid rgb(235,235,235);
}

.radio-group radio{
  padding-left: 30rpx;
}

.radio text{
  color: black;
